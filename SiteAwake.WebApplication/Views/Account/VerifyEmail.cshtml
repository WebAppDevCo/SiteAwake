@model SiteAwake.WebApplication.Models.SignUpViewModel

@{
    Layout = null;
    var verified = string.IsNullOrEmpty(Model.ErrorMessage);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0 minimal-ui" />
    <title>SiteAwake - Email Verification</title>
    <meta name="description" content="Websites on shared hosting platforms can suffer from long wake up times due to inactivity. SiteAwake makes sure your website never sleeps." />
    <meta name="keywords" content="hosted website slow,shared hosting slow,godaddy hosting slow,shared hosting application pool" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon">
    <link rel="icon" href="/Images/icon.png" type="image/png">
</head>
<body ng-app="SiteAwake.WebApplication.Common">
    <div class="global-network-background">
        <img src="~/Images/blue-sky.jpeg" />
    </div>
    <section id="header" class="header">
        <div class="col-xs-12 text-center">
            <div class="link link-home"><a href="~/">Home</a></div>
            <div class="link link-sign-in"><a href="~/Account/Login">Log In</a></div>
            <div class="link"><a href="javascript:(0)" id="showContactDialog">Contact</a></div>
        </div>
    </section>
    <section id="content" class="container">
        <div id="main-content" class="main-content">

            @*<div class="panel panel-opaque">

                </div>*@

            <div class="panel-body col-xs-12 panel-body-opacity-overlay">
                <div class="col-xs-12 col-sm-12">
                    <div class="panel about-panel">
                        <div class="col-xs-12 text-center logo">
                            <a style="border:none;" href="~/"><img class="img-responsive" src="~/Images/site-awake-sm.png" /></a>
                        </div>
                        <div class="text-left">
                            <h2>Thank you for confirming your email</h2>
                            <p>
                            @{
                                if (verified) {
                                    @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" });
                                }
                                else
                                {
                                    @Model.ErrorMessage;
                                }
                            }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="footer">
        <p>&copy; @DateTime.Now.Year - SiteAwake.net</p>
    </section>

    <div id="modalDialogMessage" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Contact</h2>
                </div>
                <div class="modal-body">
                    <div style="position:relative;">
                        <div class="row" style="margin: 0px;">
                            <ng-include src="'/app/components/home/contactView.html'">
                            </ng-include>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="~/Assets/js/angular.min.js"></script>
    <script type="text/javascript" src="~/app/app.module.js"></script>
    <script type="text/javascript" src="~/app/shared/common/utilitiesService.js"></script>
    <script type="text/javascript" src="~/app/components/home/homeService.js"></script>
    <script type="text/javascript" src="~/app/components/home/messageController.js"></script>
    
    <script>
        $(function () {
    
            $('#showContactDialog').click(function () {
                $('#modalDialogMessage').modal('show');
            });
        });
    </script>
