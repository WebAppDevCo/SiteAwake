<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0 minimal-ui" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta name="description" content="Websites on shared hosting platforms can suffer from long wake up times due to inactivity. SiteAwake makes sure your website never sleeps." />
    <meta name="keywords" content="hosted website slow,shared hosting slow,godaddy hosting slow,shared hosting application pool" />
    <title>SiteAwake - Give Your Website a Wake-Up Call!</title>
    @Styles.Render("~/Content/css-account-admin")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon">
    <link rel="icon" href="/Images/icon.png" type="image/png">
</head>
<body class="account-admin" ng-app="SiteAwake.WebApplication.Common">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("SiteAwake", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a class="navbar-brand" href="~/"> <img src="~/images/logo-borderless.png" alt="SiteAwake" title="SiteAwake"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Wake-Up Settings", "Index", "Account")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li><a href="javascript:(0)" id="showContactDialog" name="showContactDialog">Contact</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="panel-body">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SiteAwake.net | <a href="javascript:(0)" id="showTermsAndConditions" name="showTermsAndConditions">Terms &amp; Conditions</a></p>
        </footer>
    </div>


    <div id="modalDialogMessage" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Contact</h2>
                </div>
                <div class="modal-body">
                    <div style="position:relative;">
                        <div class="row" style="margin: 0px;">
                            <ng-include src="'/app/components/home/contactView.html'">
                            </ng-include>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modalTermsAndConditions" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Terms &amp; Conditions</h2>
                </div>
                <div class="modal-body">
                    <div style="position:relative;">
                        <div class="row" style="margin: 0px;">
                            <iframe class="terms-frame" frameborder="0" scrolling="auto" src="~/terms-and-conditions.html"></iframe>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default pull-left terms-button" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="~/Assets/js/angular.min.js"></script>
    <script type="text/javascript" src="~/app/app.module.js"></script>
    <script type="text/javascript" src="~/app/shared/common/utilitiesService.js"></script>
    <script type="text/javascript" src="~/app/components/home/homeService.js"></script>
    <script type="text/javascript" src="~/app/components/home/messageController.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            $('#showContactDialog').click(function () {
                //$("#modalDialogMessage").dialog({
                //    modal: true,
                //    buttons: {
                //        //Close: function () {
                //        //    $(this).dialog("close");
                //        //}
                //    }
                //});
                $('#modalDialogMessage').modal('show');
            });
        });

        $('#showTermsAndConditions').click(function () {
            $('#modalTermsAndConditions').modal('show');
        });
    </script>

